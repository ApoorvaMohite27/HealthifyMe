@model IEnumerable<HealthifyMeFinalProject.Models.CustomerDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Details</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MedicalCondition)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age) years
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height) Ft/In
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentWeight) Kg
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetWeight) Kg
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalCondition)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CustomerId">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
